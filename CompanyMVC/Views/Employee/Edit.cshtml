@model EmployeeViewModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit @Model.Name Employee</h2>
<div asp-validation-summary="All"></div>
<form asp-action="Edit" enctype="multipart/form-data">
    <input asp-for="@Model.ImageName" hidden />
    <img src="~/Files/Images/@Model.ImageName" class="rounded mb-2" height="120" width="120" alt="Employee Image" />
    <partial name="PartialViews/CreateEditPartialView" />

    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>
@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}


