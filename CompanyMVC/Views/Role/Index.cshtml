@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}
<a asp-action="Create" asp-controller="Role" class="btn btn-success mb-3"> Add New Role </a>

@if (Model.Count() > 0)
{
    <form class="input-group mb-4" method="get" asp-action="Index">
        <input class="form-control" type="text" name="Search" placeholder="Role's Name">
        <button class="btn btn-outline-secondary" type="submit">Search</button>
    </form>
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.RoleName</td>

                    <partial name="_ButtonsPartialView" model="@Role.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h1>There is No Roles</h1>
    </div>
}

