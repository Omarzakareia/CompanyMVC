@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit @Model.RoleName Role</h1>
<form asp-action="Edit">
    <div class="form-group mt-5">
        <label class="col-form-label" asp-for="RoleName"></label>
        <input  class="form-control" asp-for="RoleName" />
    </div>

    <a asp-action="AddOrRemoveUsers" asp-route-roleId="@Model.Id" class="btn btn-info mt-3 mb-3">Add Or Remove Users</a><br />
    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>

@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}
