@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div asp-validation-summary="All"></div>
<div class="wrapper">
    <h2>Login</h2>
    <form asp-action="Login">
        <div class="input-box">
            <input type="text" asp-for="Email" placeholder="Email Address" required="">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="input-box">
            <input type="password" asp-for="Password" placeholder="Password" required="">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="policy">
            <input asp-for="RememberMe" class="checkbox" >
            <h3>Remember Me?</h3>
        </div>
        <div class="input-box button">
            <input type="submit" value="SIGNIN">
        </div>
        <div class="text">
            <h3>Don't have an Account? <a asp-action="Register">Sign Up now!</a></h3>
        </div>
        <div class="text">
            <h3> <a asp-action="ForgetPassword">Forget Password</a></h3>
        </div> 
    </form>
</div>
@section ValidationScriptSection
{
    <partial name="_ValidationScriptsPartial" />
}

