@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="wrapper">
    <h2>Registration</h2>
    <form asp-action="Register">
        <div class="input-box">
            <input type="text" asp-for="FName" placeholder="First name" required="">
            <span asp-validation-for="FName" class="text-danger"></span>
        </div>
        <div class="input-box">
            <input type="text" asp-for="LName" placeholder="Last name" required="">
            <span asp-validation-for="LName" class="text-danger"></span>
        </div>
        <div class="input-box">
            <input type="text" asp-for="Email" placeholder="Email Address" required="">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="input-box">
            <input type="password" asp-for="Password" placeholder="Create password" required="">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="input-box">
            <input type="password" asp-for="ConfirmPassword" placeholder="Confirm password" required="">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="policy">
            <input asp-for="IsAgree" class="checkbox" required="">
            <h3>I Agree To all terms & condition</h3>
        </div>
        <div class="input-box button">
            <input type="submit" value="SIGNUP">
        </div>
        <div class="text">
            <h3>Already have an account? <a asp-action="Login">Login now!</a></h3>
        </div>
    </form>
</div>
@section ValidationScriptSection 
{
    <partial name="_ValidationScriptsPartial" />
}

