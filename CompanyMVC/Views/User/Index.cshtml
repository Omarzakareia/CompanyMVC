@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

@if (Model.Count()>0)
{
    <form class="input-group mb-3" method="get" asp-action="Index">
        <input class="form-control" type="text" name="Search" placeholder="User's Name">
        <button class="btn btn-outline-secondary" type="submit">Search</button>
    </form>
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.FName)</td>
                <td>@Html.DisplayNameFor(U => U.LName)</td>
                <td>@Html.DisplayNameFor(U => U.Email)</td>
                <td>@Html.DisplayNameFor(U => U.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(U => U.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>
                    <td>@User.Id</td>
                    <td>@User.FName</td>
                    <td>@User.LName</td>
                    <td>@User.Email</td>
                    <td>@User.PhoneNumber</td>
                    <td>@string.Join(",", User.Roles)</td>
                    <partial name="_ButtonsPartialView" model="@User.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h1>There is No Users</h1>
    </div>
}

